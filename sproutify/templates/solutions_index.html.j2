{% extends "_base.html.j2" %}
{% block content %}
    <div class="container">
        <div class="tabs">
            <ul>
                <li class="is-active">
                    <a>All</a>
                </li>
                <li>
                    <a>Pass</a>
                </li>
                <li>
                    <a>Fail</a>
                </li>
                <li>
                    <a>Todo</a>
                </li>
            </ul>
        </div>
        <ul>
            {% for solution in solutions %}
                <li>
                    <a href="{{ url_for('main.show_solutions_v1', id=solution['Solution ID']) }}">{{ solution['Solution ID'] }}. {{ solution['title'] }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock content %}

{% block scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tabs = document.querySelectorAll('.tabs ul li');
            tabs.forEach(function (tab) {
                tab.addEventListener('click', function () {
                    tabs.forEach(function (t) {
                        t.classList.remove('is-active');
                    });
                    tab.classList.add('is-active');
                });
            });
        });
    </script>
{% endblock scripts %}