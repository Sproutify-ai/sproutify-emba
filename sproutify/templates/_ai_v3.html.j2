<h1 class="title has-text-centered">{% if is_pass %}✅ Pass{% else %}❌ Fail{% endif %}</h1>
{% for criterion in criteria %}
    <div class="card">
        <div class="card-header is-clickable">
            <p class="card-header-title">
                {% if criteria[criterion]['is_passed'] %}
                    ✅
                {% else %}
                    ❌
                {% endif %}
                {{ criterion }}
            </p>
            <button class="card-header-icon">
                <span class="icon has-text-info has-tooltip-left has-tooltip-multiline"
                      data-tooltip="{{ tooltips[loop.index0] }}">
                    <i class="fas fa-info-circle"></i>
                </span>
            </button>
        </div>
        <div class="card-content">
            <div class="content">
            {{ criteria[criterion]['reason'] }}
            </div>
        </div>
    </div>
{% endfor %}
